<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Midterm2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="big_white_text">
        <item name="color">@color/white</item>
        <item name="android:textSize">24dp</item>
        <item name="font">@font/poppins_bold</item>
    </style>

    <style name="blue_text">
        <item name="color">@color/blue</item>
        <item name="android:textSize">16dp</item>
        <item name="font">@font/poppins_bold</item>
    </style>

    <style name="light_blue_text">
        <item name="color">@color/blue</item>
        <item name="android:textSize">16dp</item>
    </style>


</resources>